NPC vendedor {
    decir: "Hola, viajero";
    si (jugador.tiene("oro")) {
        decir: "Tengo justo lo que buscas";
    } sino {
        decir: "Vuelve cuando tengas algo de valor";
    }
    si(jugador.tiene("espada")){
        decir: "Que bonita espada, quieres venderla?";
    }
}

NPC campesino {
    decir: "Saludos jugador";
    si(jugador.tiene("espada")){
        decir: "Yo tambien use una en el pasado";
    }
    sino{
        decir: "Que te trae por aqui";
    }
}